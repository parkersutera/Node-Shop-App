extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
block content
    if (editing)
        .center
            .img-details
                img(src=`${product.imageUrl}` alt=`${product.title}`)
            form.product-form(action="/admin/edit-product", method="POST")
                .form-control
                    label(for="title") Title
                    input(type="text",name="title",value=`${product.title}`)#title
                .form-control
                    label(for="imageUrl") Image URL
                    input(type="text",name="imageUrl",value=`${product.imageUrl}`)#imageUrl
                .form-control
                    label(for="price") Price
                    input(type="number",name="price", step="0.01",value=`${product.price}`)#price
                .form-control
                    label(for="description") Description
                    textarea(name="description", rows="4")#description #{product.description}
                input(type="hidden", value=`${product.id}`,name="productId")
                button.btn.blk-btn.btn-no-radius(type="submit") Update Product
    else
        form.product-form(action="/admin/add-product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text",name="title")#title
            .form-control
                label(for="imageUrl") Image URL
                input(type="text",name="imageUrl")#imageUrl
            .form-control
                label(for="price") Price
                input(type="number",name="price", step="0.01")#price
            .form-control
                label(for="description") Description
                textarea(name="description", rows="4")#description
            button.btn.blk-btn.btn-no-radius(type="submit") Add Product 